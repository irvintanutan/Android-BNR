<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorPrimary">

            <ImageView
                android:id="@+id/img_manual_entry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingBottom="12dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="12dp"
                android:tint="@color/colorWhite"
                app:srcCompat="@drawable/ic_round_keyboard_24px" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:paddingLeft="@dimen/_10sdp"
                android:text="Assign To Cage"
                android:textColor="@color/colorWhite"
                android:textSize="18dp"
                android:textStyle="bold" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:background="@drawable/blue_border"
            android:orientation="horizontal"
            android:padding="@dimen/_10sdp"
            android:weightSum="3">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="CAGE NO"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:weightSum="4"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:paddingLeft="@dimen/_5sdp"
                        android:layout_weight="3"
                        android:enabled="false"
                        android:id="@+id/barcodeTextCageNo"
                        android:layout_width="0dp"
                        android:selectAllOnFocus="true"
                        android:layout_height="@dimen/_35sdp"
                        android:background="@drawable/blue_border"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:textSize="16dp"/>

                    <Button
                        android:layout_weight="1"
                        android:id="@+id/btnScanCageNo"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_38sdp"
                        android:background="@drawable/scan"
                        android:text="Scan"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/_7sdp" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:background="@drawable/blue_border"
            android:orientation="horizontal"
            android:padding="@dimen/_10sdp"
            android:weightSum="3">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="CAGE SEAL"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:weightSum="4"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:paddingLeft="@dimen/_5sdp"
                        android:layout_weight="3"
                        android:enabled="false"
                        android:id="@+id/barcodeTextCageSeal"
                        android:layout_width="0dp"
                        android:selectAllOnFocus="true"
                        android:layout_height="@dimen/_35sdp"
                        android:background="@drawable/blue_border"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:textSize="16dp"/>

                    <Button
                        android:layout_weight="1"
                        android:id="@+id/btnScanCageSeal"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_38sdp"
                        android:background="@drawable/scan"
                        android:text="Scan"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/_7sdp" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">

            <Button
                android:id="@+id/cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:layout_weight="1"
                android:background="@drawable/red_button"
                android:text="Cancel"
                android:textColor="@color/colorWhite" />

            <Button
                android:id="@+id/confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:layout_weight="1"
                android:background="@drawable/green_button"
                android:text="Confirm"
                android:textColor="@color/colorWhite" />

        </LinearLayout>
    </LinearLayout>

</FrameLayout>