                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:background="@color/Brown" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
